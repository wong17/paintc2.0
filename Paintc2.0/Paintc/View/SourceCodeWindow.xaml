<Window x:Class="Paintc.View.SourceCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:controller="clr-namespace:Paintc.Controller" 
        d:DataContext="{d:DesignInstance Type=controller:SourceCodeWindowController}"
        mc:Ignorable="d"
        Title="ViewSourceCodeWindow" Height="450" Width="600">
    <Grid>
        <TextBlock Height="400" Text="{Binding Code}" TextWrapping="NoWrap"/>
    </Grid>
</Window>
